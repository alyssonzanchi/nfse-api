generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tomador {
  id                Int      @id @default(autoincrement())
  type              Type
  cpf_cnpj          String   @unique
  nome_razao_social String
  logradouro        String
  bairro            String
  cod_cidade        Int
  cep               String
  email             String?
  Imovel            Imovel[]
}

model Imovel {
  id        Int    @id @default(autoincrement())
  cod_loc   Int
  endereco  String
  tomadorId Int

  tomador Tomador @relation(fields: [tomadorId], references: [id])
}

enum Type {
  F
  J
}
